{% extends 'template/base.html.twig' %}
{% block content %}
    {% include 'messages/imports/header.html.twig' %}

    <div class="container">
        <main class="row align-items-start my-4">
            <aside class="col-2">
                {% include 'messages/imports/list.html.twig' %}
            </aside>

            <section class="col-10 px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-3">{{ group.getAttribute('name') }}</h3>
                    <div>
                        <a href="/groups/{{ group.getAttribute('id') }}/file" class="btn btn-outline-primary">Post
                            a file</a>
                        <a href="/groups/{{ group.getAttribute('id') }}/announcement" class="btn btn-outline-primary">Post
                            an announcement</a>
                    </div>
                </div>
                <span>Members:</span>
                <span class="text-muted">
                    {% for member in members %}
                        {{ member.getAttribute('firstname') }} {{ member.getAttribute('lastname') }}{% if not loop.last %},{% endif %}
                    {% endfor %}
                </span>

                {% if files | length > 0 %}
                    {% include 'messages/imports/files.html.twig' %}
                {% endif %}

                <h4 class="mt-4 mb-3">Messages</h4>
                <div class="border p-4 mt-3">
                    {% include 'messages/imports/messages.html.twig' %}
                    {% include 'messages/imports/form.html.twig' %}
                </div>
            </section>
        </main>
    </div>
{% endblock %}