<div class="my-4">
    <h4 class="mb-3">Files</h4>
    <ul class="list-group">
        {% for file in files %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ file.filename }}
                <a class="badge bg-primary rounded-pill text-white text-decoration-none"
                   href="/uploads/groups/{{ group.id }}/{{ file.filename }}" download>Download</a>
            </li>
        {% endfor %}
    </ul>
</div>
