<div class="d-flex justify-content-end align-items-center mb-3">
    <a href="/groups/{{ group.getAttribute('id') }}/file" class="btn btn-outline-primary">Post
        a file</a>
</div>

<ul class="list-group">
    {% if files | length > 0 %}
        {% for file in files %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ file.filename }}
                <a class="badge bg-primary rounded-pill text-white text-decoration-none"
                   href="/uploads/groups/{{ group.id }}/{{ file.filename }}" download>Download</a>
            </li>
        {% endfor %}
    {% else %}
        <p class="text-center text-muted">No files found.</p>
    {% endif %}
</ul>
