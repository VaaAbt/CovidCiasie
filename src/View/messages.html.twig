{% extends 'template/base.html.twig' %}
{% block content %}
    <header class="container pt-5 d-flex justify-content-between align-items-center">
        <h2>Messages</h2>
        <a href="/groups/new" class="btn btn-primary">Create a group</a>
    </header>

    <div class="container">
        <main class="row align-items-start my-4">
            <aside class="col-2">
                <div class="list-group">
                    {% for user in users %}
                        <a href="/messages/user/{{ user.id }}"
                           class="list-group-item list-group-item-action">{{ user.firstname }} {{ user.lastname }}</a>
                    {% endfor %}
                    {% for grp in groups %}
                        <a href="/messages/group/{{ grp.group_id }}"
                           class="list-group-item list-group-item-action">{{ grp.group().first().name }}</a>
                    {% endfor %}
                </div>
            </aside>

            <section class="border col-10 p-4">
                {% for msg in messages %}
                    <div>
                        <p class="{{ msg.sender_id == auth.user.id ? 'text-end' : 'text-start' }} "><span
                                    class="opacity-50">{{ msg.sender().first().firstname }} {{ msg.sender().first().lastname }}</span>
                            {{ msg.message }}</p>
                    </div>
                {% endfor %}
                <form method="post">
                    {{ csrf_token() }}
                    <div class="d-flex gap-2">
                        <div class="flex-grow-1">
                            <input type="text" class="form-control" name="message" id="message" required
                                   placeholder="Your message" aria-label="Your message" autocomplete="off">
                        </div>
                        <button type="submit" class="btn btn-primary">Send message</button>
                    </div>
                </form>
            </section>
        </main>
    </div>
{% endblock %}