{% extends 'template/base.html.twig' %}
{% block content %}
    <header class="container pt-5 d-flex justify-content-between align-items-center">
        <h2>Messages</h2>
        <a href="/groups/new" class="btn btn-primary">Create a group</a>
    </header>

    <div class="container">
        <main class="row align-items-start my-4">
            <aside class="col-2">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">Hugo Fresnel</a>
                    <a href="#" class="list-group-item list-group-item-action">Group 1</a>
                    <a href="#" class="list-group-item list-group-item-action">Valentin Aubertin</a>
                    <a href="#" class="list-group-item list-group-item-action">Elon Musk</a>
                </div>
            </aside>

            <section class="border col-10 p-4">
                <form method="post">
                    <div class="d-flex gap-2">
                        <div class="flex-grow-1">
                            <input type="text" class="form-control" name="message" id="message" required
                                   placeholder="Your message" aria-label="Your message">
                        </div>
                        <button type="submit" class="btn btn-primary">Send message</button>
                    </div>
                </form>
            </section>
        </main>
    </div>
{% endblock %}